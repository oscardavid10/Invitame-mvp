<%
const meta = (theme && theme.meta) ? theme.meta : {};
const url  = (meta.music_url || '').trim();
const autoplay = !!meta.music_autoplay; // true/false
if (url) {
%>
<section class="py-12">
  <div class="container mx-auto px-5 max-w-3xl">
    <h3 class="font-display text-2xl mb-3">Música</h3>
    <div class="card flex items-center justify-between gap-4">
      <audio
        src="<%= url %>"
        controls
        <%= autoplay ? 'autoplay' : '' %>
      ></audio>
      <div class="text-xs text-[var(--ring)]">
        <% if (autoplay) { %>
          Intentaremos reproducir automáticamente (el navegador podría bloquearlo).
        <% } else { %>
          Pulsa play para escuchar.
        <% } %>
      </div>
    </div>
  </div>
</section>
<% } %>
