<section class="py-12">
  <div class="container mx-auto px-5 grid md:grid-cols-2 gap-6 items-stretch">
    <% if (data.ceremony_address) { %>
      <div class="card">
        <h3 class="font-display text-xl">Ceremonia</h3>
        <p class="mt-2 text-[var(--ring)]"><%= data.ceremony_venue || '' %><br><%= data.ceremony_address %></p>
        <% if (data.show_ceremony_map) { %>
          <div class="mt-4 rounded-2xl overflow-hidden ring-1 ring-white/10">
            <iframe src="https://www.google.com/maps?q=<%= encodeURIComponent(data.ceremony_address) %>&output=embed"
                    width="100%" height="100%" style="min-height:320px" loading="lazy"></iframe>
          </div>
        <% } %>
      </div>
    <% } %>

    <div class="card">
      <h3 class="font-display text-xl">Recepci√≥n</h3>
      <p class="mt-2 text-[var(--ring)]"><%= data.venue %><br><%= data.address %></p>
      <% if (data.show_map) { %>
        <div class="mt-4 rounded-2xl overflow-hidden ring-1 ring-white/10">
          <iframe src="https://www.google.com/maps?q=<%= encodeURIComponent(data.address) %>&output=embed"
                  width="100%" height="100%" style="min-height:320px" loading="lazy"></iframe>
        </div>
      <% } %>
    </div>
  </div>
</section>
