<section class="py-12">
  <div class="container mx-auto px-5 grid md:grid-cols-2 gap-6 items-stretch">
    <div class="card">
      <h3 class="font-display text-xl">Ubicaci√≥n</h3>
      <p class="mt-2 text-[var(--ring)]"><%= data.address %></p>
      <div class="mt-4 flex gap-3">
        <% if (data.whatsapp_phone){ %>
          <a class="btn btn-ghost" href="https://wa.me/<%= data.whatsapp_phone.replace(/[^+\d]/g,'') %>" target="_blank">WhatsApp</a>
        <% } %>
        <a class="btn btn-ghost" target="_blank" href="https://www.google.com/maps?q=<%= encodeURIComponent(data.address) %>">Abrir en Maps</a>
      </div>
    </div>
    <div class="rounded-2xl overflow-hidden ring-1 ring-white/10">
      <iframe src="https://www.google.com/maps?q=<%= encodeURIComponent(data.address) %>&output=embed" width="100%" height="100%" style="min-height:320px" loading="lazy"></iframe>
    </div>
  </div>
</section>