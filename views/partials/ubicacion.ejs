<section class="py-12">
  <div class="container mx-auto px-5 grid md:grid-cols-2 gap-6 items-stretch">
    <!-- Recepción -->
    <div class="card">
      <h3 class="font-display text-xl">Recepción</h3>
      <p class="mt-2 text-[var(--ring)]"><%= data.venue %><br/><%= data.address %></p>
      <div class="mt-4 flex gap-3">
        <% if ((data.address||'').trim()) { %>
          <a class="btn btn-ghost" target="_blank" href="https://www.google.com/maps?q=<%= encodeURIComponent(data.address) %>">Abrir en Maps</a>
        <% } %>
      </div>
    </div>
    <div class="rounded-2xl overflow-hidden ring-1 ring-white/10">
      <% if (data.show_map && (data.address||'').trim()) { %>
        <iframe src="https://www.google.com/maps?q=<%= encodeURIComponent(data.address) %>&output=embed" width="100%" height="100%" style="min-height:320px" loading="lazy"></iframe>
      <% } %>
    </div>

    <!-- Ceremonia (opcional) -->
    <% if ((data.ceremony_venue||'').trim() || (data.ceremony_address||'').trim()) { %>
      <div class="card">
        <h3 class="font-display text-xl">Ceremonia</h3>
        <p class="mt-2 text-[var(--ring)]">
          <%= data.ceremony_venue || '' %><% if ((data.ceremony_address||'').trim()) { %><br/><%= data.ceremony_address %><% } %>
        </p>
        <div class="mt-4 flex gap-3">
          <% if ((data.ceremony_address||'').trim()) { %>
            <a class="btn btn-ghost" target="_blank" href="https://www.google.com/maps?q=<%= encodeURIComponent(data.ceremony_address) %>">Abrir en Maps</a>
          <% } %>
        </div>
      </div>
      <div class="rounded-2xl overflow-hidden ring-1 ring-white/10">
        <% if (data.show_map_ceremony && (data.ceremony_address||'').trim()) { %>
          <iframe src="https://www.google.com/maps?q=<%= encodeURIComponent(data.ceremony_address) %>&output=embed" width="100%" height="100%" style="min-height:320px" loading="lazy"></iframe>
        <% } %>
      </div>
    <% } %>
  </div>
</section>
