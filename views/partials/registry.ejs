<%
// theme.meta.registry puede ser: texto libre o lista de links (uno por lÃ­nea)
// Ej: "https://amazon.com/mi-lista\nhttps://mesaderegalos.com/abc\nOtras instrucciones..."
const meta = (theme && theme.meta) ? theme.meta : {};
const raw  = (meta.registry || '').trim();
if (raw) {
  const lines = raw.split(/\r?\n/).map(s => s.trim()).filter(Boolean);
    const anim = theme.animations?.registry || {};
 const animClass = anim.in ? `animate__animated animate__${anim.in}` : '';
    const animOutAttr = anim.out ? `data-anim-out="${anim.out}"` : '';
%>
<section class="py-12 <%= animClass %>" <%- animOutAttr %>>
  <div class="container mx-auto px-5 max-w-3xl">
    <h3 class="font-display text-2xl mb-3">Mesa de regalos</h3>
    <div class="grid sm:grid-cols-2 gap-3">
      <% lines.forEach((ln,i)=>{ 
          const isUrl = /^https?:\/\//i.test(ln);
          if (isUrl) { %>
            <a class="btn btn-primary text-center" target="_blank" rel="noopener" href="<%= ln %>">
              Ver lista <%= (i+1) %>
            </a>
          <% } else { %>
            <div class="card"><p class="text-[var(--ring)]"><%= ln %></p></div>
          <% }
        }) %>
    </div>
  </div>
</section>
<% } %>
