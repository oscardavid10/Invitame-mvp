<section class="container mx-auto px-5 py-10">
  <h1 class="text-2xl font-bold mb-4">Mis invitaciones</h1>

  <% if (!invitations || !invitations.length) { %>
    <p class="text-[var(--ring)]">Aún no tienes invitaciones. <a class="btn btn-primary ml-2" href="/site/crear">Crear una</a></p>
  <% } else { %>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% invitations.forEach(inv=>{ %>
        <article class="card">
          <img class="rounded-xl w-full aspect-video object-cover" src="<%= inv.preview_img || '/public/img/placeholder.jpg' %>" alt="">
          <h3 class="mt-3 font-display text-xl"><%= inv.title %></h3>
          <p class="text-sm text-[var(--ring)] mt-1">
            <%= (inv.template_name || inv.template_key) %> · <%= new Date(inv.date_iso).toLocaleDateString('es-MX') %>
          </p>
          <div class="mt-3 flex gap-2">
            <a class="btn btn-primary" href="/u/<%= inv.slug %>" target="_blank">Ver</a>
            <a class="btn" href="/panel/wizard/<%= inv.id %>">Editar</a>
          </div>
        </article>
      <% }) %>
    </div>
  <% } %>
</section>
