<section class="container mx-auto px-5 py-10 max-w-md">
  <h1 class="text-2xl font-bold mb-6">Crear cuenta</h1>
    <% if (typeof error !== 'undefined' && error) { %>
    <p class="mb-4 p-2 rounded bg-red-500/10 text-red-400"><%= error %></p>
  <% } %>
  <form method="post" action="/auth/register" class="grid gap-4">
    <label class="grid gap-1">
      <span>Nombre</span>
      <input class="rounded bg-black/30 px-3 py-2" name="name" placeholder="Tu nombre">
    </label>
    <label class="grid gap-1">
      <span>Correo</span>
      <input class="rounded bg-black/30 px-3 py-2" name="email" type="email" required placeholder="tucorreo@dominio.com">
    </label>
    <label class="grid gap-1">
      <span>Contraseña</span>
      <input class="rounded bg-black/30 px-3 py-2" name="password" type="password" required>
    </label>
    <button class="btn btn-primary mt-2" type="submit">Registrarme</button>
    <p class="text-sm text-[var(--ring)]">¿Ya tienes cuenta? <a class="underline" href="/auth/login">Inicia sesión</a></p>
  </form>
</section>
