<section class="container mx-auto px-5 py-12 max-w-md">
  <h2 class="text-2xl font-bold mb-4">Restablecer contraseña</h2>
  <% if (error) { %>
    <p class="mb-3 p-2 rounded bg-red-500/10 text-red-400"><%= error %></p>
  <% } %>
  <% if (token) { %>
  <form method="post" action="/auth/reset/<%= token %>" class="grid gap-3">
    <input class="rounded bg-black/30 px-3 py-2" name="password" type="password" placeholder="Nueva contraseña">
    <button class="btn btn-primary">Guardar</button>
  </form>
  <% } %>
</section>